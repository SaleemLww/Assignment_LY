# Backend Dockerfile for Development
FROM node:18-alpine

WORKDIR /app

# Copy package files
COPY package*.json ./
COPY tsconfig.json ./

# Install all dependencies (including dev)
RUN npm install

# Copy prisma schema
COPY prisma ./prisma/

# Generate Prisma Client
RUN npx prisma generate

# Copy source code
COPY src ./src

# Create directories
RUN mkdir -p uploads logs

# Expose port
EXPOSE 5001

# Start with nodemon for hot reload
CMD ["npm", "run", "dev"]
